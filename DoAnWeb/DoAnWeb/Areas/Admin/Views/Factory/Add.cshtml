@{
    ViewBag.Title = "Thêm nhà sản xuất";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section title
{
    
    Thêm nhà sản xuất
}
@section css
{
    <link href="~/Assets/bootstrap-select-1.10.0/css/bootstrap-select.min.css" rel="stylesheet" />
    <link href="~/Areas/Admin/Assets/sweetalert2/sweetalert2.min.css" rel="stylesheet" />
    <link href="~/Areas/Admin/Assets/datatables/media/css/dataTables.bootstrap.min.css" rel="stylesheet" />
    <link href="~/Areas/Admin/Assets/datatables/media/css/dataTables.jqueryui.min.css" rel="stylesheet" />
}
@using DoAnWeb.Areas.Admin.Models
@model Poco_Add_Factory
<div class="panel panel-info">
    <div class="panel-heading">Thêm nhà sản xuất</div>
    <div class="panel-body">

        <form class="form-horizontal" method="post" action="" id="frmAdd">
            <div class="form-group">
                <label class="col-sm-2 control-label">Tên nhà sản xuất</label>
                <div class="col-sm-6">
                    <input type="text" class="form-control" name="TenNhaSanXuat">
                </div>
                <div class="col-sm-4">
                    <button type="submit" class="btn btn-primary" id="btnSave">
                        <i class="fa fa-plus-circle"></i>
                        Thêm
                    </button>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">
                    Kích hoạt
                </label>
                <div class="checkbox col-sm-6">
                    <label>
                        @Html.CheckBox("DaXoa", true)
                    </label>
                </div>
            </div>
        </form>
    </div>
</div>

@section js
{
    <script src="~/Areas/Admin/Assets/sweetalert2/sweetalert2.min.js"></script>
    <script src="~/Assets/jQueryValidate/jquery.validate.min.js"></script>
    <script type="text/javascript">
        //$('#btnSave').click(function () {

        //});
        $('#frmAdd').validate({
            rules: {
                TenNhaSanXuat: {
                    required: true,
                }
            },
                messages: {
                    TenNhaSanXuat: {
                        required: "Chưa nhập tên",
                    },
                },
                success: "valid",
                submitHandler: function (form) {
                    swal({
                        title: 'Xác Nhận Thêm Nhà Sản Xuất',
                        text: "Bạn muốn Thêm Nhà Sản Xuất ???",
                        type: 'warning',
                        cancelButtonText: 'Hủy bỏ',
                        showCancelButton: true,
                        confirmButtonColor: '#3085d6',
                        cancelButtonColor: '#d33',
                        confirmButtonText: 'Xác nhận'
                    }).then(function () {
                        swal(
                          'Hoàn tất!',
                          'Thêm thành công',
                          'success'
                        ),
                        form.submit();
                    });
                }
        });
    </script>
}
