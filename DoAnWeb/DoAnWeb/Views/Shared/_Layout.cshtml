@using DoAnWeb.ClassHelper
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Assets/bootstrap-3.3.6/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Assets/font-awesome-4.6.3/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Assets/Theme/css/animate.css" rel="stylesheet" />
    <link href="~/Assets/Theme/css/main.css" rel="stylesheet" />
    <link href="~/Assets/Theme/css/prettyPhoto.css" rel="stylesheet" />
    <link href="~/Assets/Theme/css/price-range.css" rel="stylesheet" />
    <link href="~/Assets/Theme/css/responsive.css" rel="stylesheet" />
    <link href="~/Assets/LeftMenu/menustyle.css" rel="stylesheet" />
    @RenderSection("section_css", false)
</head>
<body>
    <header id="header">
        <!--header-->
        <div class="header_top">
            <!--header_top-->
            <div class="container">
                <div class="row">
                    <div class="col-sm-6">
                        <div class="contactinfo">
                            <ul class="nav nav-pills">
                                <li><a href="#"><i class="fa fa-phone"></i> +2 95 01 88 821</a></li>
                                <li><a href="#"><i class="fa fa-envelope"></i> info@domain.com</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="social-icons pull-right">
                            <ul class="nav navbar-nav">
                                <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                                <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                                <li><a href="#"><i class="fa fa-linkedin"></i></a></li>
                                <li><a href="#"><i class="fa fa-dribbble"></i></a></li>
                                <li><a href="#"><i class="fa fa-google-plus"></i></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div><!--/header_top-->

        <div class="header-middle">
            <!--header-middle-->
            <div class="container">
                <div class="row">
                    <div class="col-sm-4">
                        <div class="logo pull-left">
                            <a href="@Url.Action("Index","Home")"><img src="~/image/logo.png" alt="" /></a>
                        </div>
                        <div class="btn-group pull-right">
                            <div class="btn-group">
                                <button type="button" class="btn btn-default dropdown-toggle usa" data-toggle="dropdown">
                                    USA
                                    <span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu">
                                    <li><a href="#">Canada</a></li>
                                    <li><a href="#">UK</a></li>
                                </ul>
                            </div>

                            <div class="btn-group">
                                <button type="button" class="btn btn-default dropdown-toggle usa" data-toggle="dropdown">
                                    DOLLAR
                                    <span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu">
                                    <li><a href="#">Canadian Dollar</a></li>
                                    <li><a href="#">Pound</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-8">
                        <div class="shop-menu pull-right">
                            <form id="frmLogout" class="hidden" method="post" action="@Url.Action("Logout","Account")">

                            </form>
                            <ul class="nav navbar-nav">
                                @if (CurrentContext.isLogin() == false)
                                {
                                    <li><a href="@Url.Action("Register","Account")"><i class="fa glyphicon-pencil"></i>Đăng ký</a></li>
                                    <li><a href="@Url.Action("Login","Account")"><i class="fa fa-sign-in"></i>Đăng nhập</a></li>
                                }
                                else
                                {
                                    <li><a href="@Url.Action("Index","Account")"><i class="fa fa-user"></i>@CurrentContext.getCurrenUser().TenNguoiSuDung</a></li>

                                    if (CurrentContext.getCurrenUser().Quyen == 1)
                                    {
                                        <li><a href="@Url.Action("Index", "Admin")"><i class="fa fa-crosshairs"></i>Quản lý</a></li>
                                    }
                                    <li><a href="@Url.Action("Index","Cart")"><i class="fa fa-shopping-cart"></i> Giỏ hàng (@CurrentContext.Cart().GetTotal())</a></li>
                                    <li><a href="javascript: ;" id="logOutLink"><i class="fa fa-sign-out"></i>Thoát</a></li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div><!--/header-middle-->

        <div class="header-bottom">
            <!--header-bottom-->
            <div class="container">
                <div class="row">
                    <div class="col-sm-9">
                        <div class="navbar-header">
                            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                                <span class="sr-only">Toggle navigation</span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                        </div>
                        <div class="mainmenu pull-left">
                            <ul class="nav navbar-nav collapse navbar-collapse">
                                <li><a href="@Url.Action("Index","Home")" class="active">Home</a></li>
                                <li class="dropdown">
                                    <a href="#">Loại Rượu<i class="fa fa-angle-down"></i></a>
                                    <ul role="menu" class="sub-menu">
                                        <li><a href="@Url.Action("ByCartegory","Products",new {id=1, page=1})">COGNAC</a></li>
                                        <li><a href="@Url.Action("ByCartegory","Products",new {id=2, page=1})">BLENDED SCOTCH</a></li>
                                        <li><a href="@Url.Action("ByCartegory","Products",new {id=3, page=1})">SINGLE MALT</a></li>
                                        <li><a href="@Url.Action("ByCartegory","Products",new {id=4, page=1})">BRANDYs</a></li>
                                    </ul>
                                </li>
                                <li class="dropdown">
                                    <a href="#">Kiến thức rượu<i class="fa fa-angle-down"></i></a>
                                    <ul role="menu" class="sub-menu">
                                        @*<li><a href="blog.html">Blog List</a></li>
                                        <li><a href="blog-single.html">Blog Single</a></li>*@
                                    </ul>
                                </li>
                                <li><a href="#">Liên hệ</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="search_box pull-right">
                            <input type="text" placeholder="Search" />
                        </div>
                    </div>
                </div>
            </div>
        </div><!--/header-bottom-->
    </header><!--/header-->
    <section id="slider">
        <!--slider-->
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <div id="slider-carousel" class="carousel slide" data-ride="carousel">
                        <ol class="carousel-indicators">
                            <li data-target="#slider-carousel" data-slide-to="0" class="active"></li>
                            <li data-target="#slider-carousel" data-slide-to="1" ></li>
                            <li data-target="#slider-carousel" data-slide-to="2"></li>
                            <li data-target="#slider-carousel" data-slide-to="3"></li>
                        </ol>

                        <div class="carousel-inner">
                            <div class="item active">
                                <div class="col-sm-6">
                                    <h1><span>C</span>OGNAG</h1>
                                    <h2>Rượu Cô-nhắc</h2>
                                    <p>Cognac là rượu brandy được sản xuất độc quyền từ nho được trồng tại vùng cognac, Pháp theo một phương pháp sản xuất được kiểm định nghiêm ngặt bởi một cơ quan chuyên môn.</p>
                                    <a href="@Url.Action("ByCartegory","Products",new {id=1, page=1})" class="btn btn-success">Thưởng thức ngay</a>
                                </div>
                                <div class="col-sm-6">
                                    <img src="~/image/1/main_thumn.jpg" width="250" class="girl img-responsive" alt="" />
                                    <img src="~/image/2/main_thumn.jpg" width="100" class="pricing" alt="" />
                                </div>
                            </div>
                            <div class="item">
                                <div class="col-sm-6">  

                                    <h1><span>B</span>LENDED SCOTCH</h1>
                                    <h2>Rượu Whisky</h2>
                                    <p>Blend là một loại Whisky đã được pha trộn. Trong lúc sản xuất (blending) nhiều loại Whisky khác nhau từ nhiều lò nấu rượu khác nhau được pha vào với nhau.</p>
                                    <a href="@Url.Action("ByCartegory","Products",new {id=2, page=1})" class="btn btn-success">Thưởng thức ngay</a>
                                </div>
                                <div class="col-sm-6">
                                    <img src="~/image/34/main_thumn.jpg" width="250" class="girl img-responsive" alt="" />
                                    <img src="~/image/35/main_thumn.jpg" width="100" class="pricing" alt="" />
                                </div>
                            </div>

                            <div class="item">
                                <div class="col-sm-6">
                                    <h1><span>S</span>INGLE MALT</h1>
                                    <h2>Rượu Whisky</h2>
                                    <p>Single là loại Whisky có nguồn gốc chỉ từ một lò nấu rượu riêng lẻ (thường dùng cho Whisky của Scotland: Single-Malt-Whisky).</p>
                                    <a href="@Url.Action("ByCartegory","Products",new {id=3, page=1})" class="btn btn-success">Thưởng thức ngay</a>
                                </div>
                                <div class="col-sm-6">
                                    <img src="~/image/45/main_thumn.jpg" width="250" class="girl img-responsive" alt="" />
                                    <img src="~/image/46/main_thumn.jpg" width="100" class="pricing" alt="" />
                                </div>
                            </div>

                            <div class="item">
                                <div class="col-sm-6">
                                    <h1><span>B</span>RANDY</h1>
                                    <h2>Rượu Brandy</h2>
                                    <p>Brandy là loại rượu mạnh thu được sau quá trình ủ rượu có nguồn gốc từ việc chưng cất dịch lên men của nho hoặc trái cây</p>
                                    <a href="@Url.Action("ByCartegory","Products",new {id=4, page=1})" class="btn btn-success">Thưởng thức ngay</a>
                                </div>
                                <div class="col-sm-6">
                                    <img src="~/image/10/main_thumn.jpg" width="250" class="girl img-responsive" alt="" />
                                    <img src="~/image/10/main_thumn.jpg" width="100" class="pricing" alt="" />
                                </div>
                            </div>

                        </div>

                        <a href="#slider-carousel" class="left control-carousel hidden-xs" data-slide="prev">
                            <i class="fa fa-angle-left"></i>
                        </a>
                        <a href="#slider-carousel" class="right control-carousel hidden-xs" data-slide="next">
                            <i class="fa fa-angle-right"></i>
                        </a>
                    </div>

                </div>
            </div>
        </div>
    </section><!--/slider-->
    <section>
        <div class="container">
            <div class="row">
                <div class="col-sm-3">
                    @{Html.RenderAction("DanhMucPartial", "Category"); }
                </div>
                <div class="col-sm-9 padding-right">
                    <h2 class="title text-center">@RenderSection("view_title", false)</h2>
                    @RenderBody()
                </div>
            </div>
        </div>
    </section>
    <footer id="footer">
        <!--Footer-->
        <div class="footer-top">
            <div class="container">
                <div class="row">
                    <div class="col-sm-2">
                        <div class="companyinfo">
                            <h2><span>e</span>-shopper</h2>
                            <p>E-shoper là trang thông tin chia sẻ kiến thức về rượu ngoại hoạt động phi lơi nhuận. Chúng tôi không kinh doanh trực tiếp trên internet.</p>
                        </div>
                    </div>
                    <div class="col-sm-7">
                        <div class="col-sm-3">
                            <div class="video-gallery text-center">
                                <a href="#">
                                    <div class="iframe-img">
                                        <img src="~/image/1/main_thumn.jpg" />
                                    </div>
                                    <div class="overlay-icon">
                                        <i class="fa fa-play-circle-o"></i>
                                    </div>
                                </a>
                                <p>Cognag</p>
                                <h2>24 DEC 2014</h2>
                            </div>
                        </div>

                        <div class="col-sm-3">
                            <div class="video-gallery text-center">
                                <a href="#">
                                    <div class="iframe-img">
                                        <img src="~/image/34/main_thumn.jpg" />
                                    </div>
                                    <div class="overlay-icon">
                                        <i class="fa fa-play-circle-o"></i>
                                    </div>
                                </a>
                                <p>Blended Scoth</p>
                                <h2>24 DEC 2014</h2>
                            </div>
                        </div>

                        <div class="col-sm-3">
                            <div class="video-gallery text-center">
                                <a href="#">
                                    <div class="iframe-img">
                                        <img src="~/image/45/main_thumn.jpg" />
                                    </div>
                                    <div class="overlay-icon">
                                        <i class="fa fa-play-circle-o"></i>
                                    </div>
                                </a>
                                <p>Single Malt</p>
                                <h2>24 DEC 2014</h2>
                            </div>
                        </div>

                        <div class="col-sm-3">
                            <div class="video-gallery text-center">
                                <a href="#">
                                    <div class="iframe-img">
                                        <img src="~/image/10/main_thumn.jpg" />
                                    </div>
                                    <div class="overlay-icon">
                                        <i class="fa fa-play-circle-o"></i>
                                    </div>
                                </a>
                                <p>Brandy</p>
                                <h2>24 DEC 2014</h2>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="address">
                            <img src="https://www.google.com/permissions/images/maps-att.png" alt="" />
                            <p style="color:black">352 Nguyễn Văn Cừ, VN(Vietnam)</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="footer-widget">
            <div class="container">
                <div class="row">
                    <div class="col-sm-2">
                        <div class="single-widget">
                            <h2>Shop</h2>
                            <ul class="nav nav-pills nav-stacked">
                                @if (CurrentContext.isLogin() == false)
                                {
                                    <li><a href="@Url.Action("Register","Account")"><i class="fa glyphicon-pencil"></i>Đăng ký</a></li>
                                    <li><a href="@Url.Action("Login","Account")"><i class="fa fa-sign-in"></i>Đăng nhập</a></li>
                                }
                                else
                                {
                                    <li><a href="@Url.Action("Index","Account")">Thông tin cá nhân</a></li>
                                    <li><a href="#"><i class="fa fa-crosshairs"></i> Đơn hàng</a></li>
                                    <li><a href="@Url.Action("Index","Cart")"><i class="fa fa-shopping-cart"></i> Giỏ hàng (@CurrentContext.Cart().GetTotal())</a></li>
                                    <li><a href="javascript: ;" id="logOutLink"><i class="fa fa-sign-out"></i>Thoát</a></li>
                                }
                            </ul>
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <div class="single-widget">
                            <h2>Danh mục sản phẩm</h2>
                            <ul class="nav nav-pills nav-stacked">
                                <li><a href="@Url.Action("ByCartegory","Products",new {id=1, page=1})">COGNAC</a></li>
                                <li><a href="@Url.Action("ByCartegory","Products",new {id=2, page=1})">BLENDED SCOTCH</a></li>
                                <li><a href="@Url.Action("ByCartegory","Products",new {id=3, page=1})">SINGLE MALT</a></li>
                                <li><a href="@Url.Action("ByCartegory","Products",new {id=4, page=1})">BRANDYs</a></li>
                            </ul>
                        </div>
                    </div>


                    <div class="col-sm-3 col-sm-offset-1">
                        <div class="single-widget">
                            <h2>Thông tin cửa hàng</h2>
                            <form action="#" class="searchform">
                                <input type="text" placeholder="Nhập địa chỉ email" />
                                <button type="submit" class="btn btn-default"><i class="fa fa-arrow-circle-o-right"></i></button>
                                <p>Vui lòng đến trực tiếp đến các cửa hàng và hệ thống siêu thị rượu ngoại hoặc gọi tới số hotline để được tư vấn. ( giá trên website chỉ mang tính chất tham khảo)</p>
                            </form>
                        </div>
                    </div>

                </div>
            </div>
        </div>

        <div class="footer-bottom">
            <div class="container">
                <div class="row">
                    <p class="pull-left">Copyright © 2016 E-SHOPPER Inc. All rights reserved.</p>
                    <p class="pull-right">Designed by <span><a target="_blank" href="http://www.themeum.com">Themeum</a></span></p>
                </div>
            </div>
        </div>

    </footer><!--/Footer-->

    <script src="~/Assets/jquery-2.2.4.min.js"></script>
    <script src="~/Assets/bootstrap-3.3.6/js/bootstrap.min.js"></script>
    <script src="~/Assets/Theme/js/jquery.scrollUp.min.js"></script>
    <script src="~/Assets/Theme/js/price-range.js"></script>
    <script src="~/Assets/Theme/js/main.js"></script>
    <script src="~/Assets/scripts/script.js"></script>
    @RenderSection("js", false)
</body>
</html>